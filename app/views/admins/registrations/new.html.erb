<h2>Зарегистрироваться как администратор</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label 'Имя' %><br />
    <%= f.text_field :firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'Фамилия' %><br />
    <%= f.text_field :secondname  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label 'Фото паспорта' %><br>
    <%= f.file_field :image_passport %>
  </div>

<div class="field">
    <%= f.label 'Дата рождения' %><br>
    <%= f.date_field :born_on %>
  </div>

  <div class="field">
    <%= f.label 'Пароль' %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'Подтверждение пароля' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
<br />


  <div class="actions">
    <%= f.submit "Зарегистрировать", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
